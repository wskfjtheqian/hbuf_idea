<templateSet group="Hbuf">
    <template description='Package declaration' name='p' toReformat='true' toShortenFQNames='true'
              value='package $KEY$ = "$NAME$"$END$'>
        <variable alwaysStopAt='true' defaultValue='' expression='' name='KEY'/>
        <variable alwaysStopAt='true' defaultValue='' expression='' name='NAME'/>
        <context>
            <option name='HBUF_FILE' value='true'/>
        </context>
    </template>
    <template description='Import declaration' name='imp' toReformat='true' toShortenFQNames='true'
              value='import "$FILE$"$END$'>
        <variable alwaysStopAt='true' defaultValue='' expression='complete()' name='FILE'/>
        <context>
            <option name='HBUF_FILE' value='true'/>
        </context>
    </template>
    <template description='Enum declaration' name='Enum' toReformat='true' toShortenFQNames='true'
              value='enum $SELECTION$ {$END$}'>
        <context>
            <option name='HBUF_FILE' value='true'/>
        </context>
    </template>
    <template description='Data declaration' name='Data' toReformat='true' toShortenFQNames='true'
              value='data $SELECTION$ = $ID$ {$END$}'>
        <variable alwaysStopAt='true' defaultValue='' expression='getDataId()' name='ID'/>
        <context>
            <option name='HBUF_FILE' value='true'/>
        </context>
    </template>
    <template description='Server declaration' name='Server' toReformat='true' toShortenFQNames='true'
              value='server $SELECTION$ = $ID$ {$END$}'>
        <variable alwaysStopAt='true' defaultValue='' expression='getServerId()' name='ID'/>
        <context>
            <option name='HBUF_FILE' value='true'/>
        </context>
    </template>
    <template description='Server function declaration' name='Function' toReformat='true' toShortenFQNames='true'
              value='$SELECTION$Reps $SELECTION$($SELECTION$Req req) = $ID$'>
        <variable alwaysStopAt='true' defaultValue='' expression='' name='ID'/>
        <context>
            <option name='HBUF_SERVER' value='true'/>
        </context>
    </template>
    <template description='Server method declaration' name='Method' toReformat='true' toShortenFQNames='true'
              value='void $SELECTION$($SELECTION$Req req) = $ID$'>
        <variable alwaysStopAt='true' defaultValue='' expression='' name='ID'/>
        <context>
            <option name='HBUF_SERVER' value='true'/>
        </context>
    </template>
</templateSet>
