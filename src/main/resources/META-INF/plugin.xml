<idea-plugin>
    <id>org.example.hbuf_idea</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Hbuf File" implementationClass="com.hbuf.idea.language.HbufFileType" fieldName="INSTANCE"
                  language="Hbuf" extensions="hbuf"/>
        <lang.parserDefinition language="Hbuf" implementationClass="com.hbuf.idea.language.HbufParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Hbuf"
                                       implementationClass="com.hbuf.idea.language.HbufSyntaxHighlighterFactory"/>
        <lang.foldingBuilder language="Hbuf"
                             implementationClass="com.hbuf.idea.language.HbufFoldingBuilder"/>
        <lang.psiStructureViewFactory language="Hbuf"
                                      implementationClass="com.hbuf.idea.language.HbufStructureViewFactory"/>

        <lang.findUsagesProvider language="Hbuf"
                                 implementationClass="com.hbuf.idea.language.HbufFindUsagesProvider"/>
        <lang.commenter
                language="Hbuf"
                implementationClass="com.hbuf.idea.language.HbufCommenter"/>

        <spellchecker.support language="Hbuf"
                              implementationClass="com.hbuf.idea.language.HbufSpellcheckingStrategy"/>

        <completion.contributor
                language="Hbuf"
                implementationClass="com.hbuf.idea.language.HbufCompletionContributor"/>

        <!--        <lang.formatter language="Hbuf" -->
        <!--                        implementationClass="com.hbuf.idea.language.HbufFormattingModelBuilder"/>-->

        <gotoSymbolContributor implementation="com.hbuf.idea.language.HbufChooseByNameContributor"/>

        <psi.referenceContributor language="Hbuf"
                                  implementation="com.hbuf.idea.language.HbufReferenceContributor"/>
        <lang.refactoringSupport language="Hbuf" implementationClass="com.hbuf.idea.language.HbufRefactoringSupportProvider"/>
        <annotator language="Hbuf" implementationClass="com.hbuf.idea.language.HbufAnnotator"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>