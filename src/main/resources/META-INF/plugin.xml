<idea-plugin>
    <id>org.example.hbuf_idea</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Hbuf" implementationClass="com.hbuf.idea.language.HbufFileType" fieldName="INSTANCE"
                  language="Hbuf" extensions="hbuf"/>
        <lang.parserDefinition language="Hbuf" implementationClass="com.hbuf.idea.language.HbufParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Hbuf"
                                       implementationClass="com.hbuf.idea.language.HbufSyntaxHighlighterFactory"/>
        <lang.foldingBuilder language="Hbuf"
                             implementationClass="com.hbuf.idea.language.HbufFoldingBuilder"/>
        <lang.psiStructureViewFactory language="Hbuf"
                                      implementationClass="com.hbuf.idea.language.HbufStructureViewFactory"/>
        <lang.commenter
                language="Hbuf"
                implementationClass="com.hbuf.idea.language.HbufCommenter"/>
        <codeInsight.lineMarkerProvider language="Hbuf"
                                        implementationClass="com.hbuf.idea.language.HbufLineMarkerProvider"/>
        <lang.refactoringSupport language="Hbuf"
                                 implementationClass="com.hbuf.idea.language.HbufRefactoringSupportProvider"/>
        <lang.findUsagesProvider language="Hbuf"
                                 implementationClass="com.hbuf.idea.language.HbufFindUsagesProvider"/>
        <spellchecker.support language="Hbuf"
                              implementationClass="com.hbuf.idea.language.HbufSpellcheckingStrategy"/>


        <codeStyleSettingsProvider implementation="com.hbuf.idea.language.formatter.HbufCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider
                implementation="com.hbuf.idea.language.formatter.HbufLanguageCodeStyleSettingsProvider"/>
        <lang.formatter language="Hbuf"
                        implementationClass="com.hbuf.idea.language.formatter.HbufFormattingModelBuilder"/>

        <lang.braceMatcher language="Hbuf" implementationClass="com.hbuf.idea.language.HbufBraceMatcher"/>
        <annotator language="Hbuf" implementationClass="com.hbuf.idea.language.HbufAnnotator"/>
        <completion.contributor
                language="Hbuf"
                implementationClass="com.hbuf.idea.language.completion.HbufCompletionContributor"/>
        <editorTypedHandler  implementationClass="com.hbuf.idea.language.HbufTypedHandler"/>

        <defaultLiveTemplates file="/liveTemplates/hbuf.xml"/>
        <liveTemplateContext implementation="com.hbuf.idea.language.template.HbufLiveTemplatesContext"/>
        <liveTemplateMacro implementation="com.hbuf.idea.language.template.HbufLiveTemplatesMacro"/>
    </extensions>

    <actions>

    </actions>
</idea-plugin>
